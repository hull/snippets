{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true,
    "import/extensions": [".js", ".jsx"],
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/standard"
  ],
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "hull",
    "moment",
    "uri",
    "request",
    "_",
  },
  "rules": {
    "strict": 0,
    "prefer-arrow-callback": [1],
    "new-cap": [0],
    "no-underscore-dangle": [0],
    "arrow-body-style": [0],
    "no-param-reassign": [0],
    "no-console": [1],
    "eqeqeq": [1],
    "camelcase": [0],
  }
}
